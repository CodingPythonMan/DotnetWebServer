<div class="login_form">
	<EditForm class="contents" Model="_input" OnSubmit=@_OnSubmit>
		<DataAnnotationsValidator />
		<InputText placeholder="ID" @bind-Value="_input.Email" />
		<InputText placeholder="Password" @bind-Value="_input.Password" type="password" />
		<!--<button class="btn btn-primary" type="submit">Login</button>-->

		<div>
			<RadzenButton Style="width: 100%" Text="Login" type="submit" />
		</div>
		<div>
			<RadzenButton Style="width: 100%" Text="Google Login" Click=@GoogleLogin type="button" />
		</div>
		<div>
			<RadzenButton Style="width: 100%" Text="Register" Click=@Register type="button" />
		</div>
	</EditForm>
	
</div>